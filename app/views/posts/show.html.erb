<% content_for :title, @post.title %>

<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <div class="card shadow-lg">
        <div class="card-header bg-primary text-white text-center">
          <h2><%= @post.title %></h2>
        </div>
        <div class="card-body">
          <p class="fw-bold"><strong>‚úèÔ∏è Content:</strong></p>
          <p class="card-text"><%= @post.content %></p>
          
          <hr>
          <p class="text-muted"><strong>üë§ Author:</strong> <%= @post.user.email %></p>

          <div class="d-flex justify-content-between mt-3">
            <%= link_to "‚úè Edit Post", edit_post_path(@post), class: "btn btn-warning" %>
            <%= link_to "‚¨Ö Back to Posts", root_path, class: "btn btn-secondary" %>
            <%= button_to "üóë Delete", post_path(@post), method: :delete, data: { confirm: "Are you sure you want to delete this post?" }, class: "btn btn-danger" %>
          </div>

          <hr>
          <h2 class="mt-4">Comments</h2>

          <div class="card mb-4 shadow-sm">
            <div class="card-body">
              <%= form_with(model: [@post, Comment.new], local: true, class: "mb-3") do |form| %>
                <div class="input-group">
                  <%= form.text_field :content, class: "form-control", placeholder: "Write a comment..." %>
                  <button type="submit" class="btn btn-primary">Post Comment</button>
                </div>
              <% end %>
            </div>
          </div>

          <% @post.comments.each do |comment| %>
            <div class="card mb-3 shadow-sm">
              <div class="card-body">
                <h6 class="card-title text-primary">
                  <%= comment.user&.name || "Anonymous" %>
                </h6>
                <p class="card-text"><%= comment.content %></p>
                <p class="text-muted" style="font-size: 0.8rem;"><%= time_ago_in_words(comment.created_at) %> ago</p>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>